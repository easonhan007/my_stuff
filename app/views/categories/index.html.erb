<div class="mb-2">
  <h3>
    <%= link_to "", new_category_path, class: 'bi bi-plus-circle' %>
    Categories
  </h3>
</div>

<table class="table my-2">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= category.desc %></td>
        <td><%= time_ago_in_words category.created_at %> ago </td>
        <td><%= time_ago_in_words category.updated_at %> ago </td>
        <td><%= link_to('', edit_category_path(category), data: {turbo_frame: 'modal'}, class: 'bi bi-pencil' ) %></td>
        <td><%= del_btn('', category_path(category)) %></td>
      </tr>
    <% end #each %>
  </tbody>
</table>

<div class="my-4 row">
  <div class="col">
    <%= link_to "New category", new_category_path, class: 'btn btn-primary'%>
  </div>
  <div class="col">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>




