<%= form_with(model: stuff) do |form| %>
  <% if stuff.errors.any? %>
    <div style="color: red">
      <p><%= pluralize(stuff.errors.count, "error") %> prohibited this stuff from being saved:</p>

      <ul>
        <% stuff.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: "form-control" %>
