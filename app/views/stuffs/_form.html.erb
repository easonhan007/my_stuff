  </div>

  <div class="mb-2">
    <%= form.label :category_id, class: 'form-label'  %>
    <%= form.collection_select :category_id, Category.order('created_at'), :id, :name, {}, class: 'form-select' %>
  </div>

  <div class="mb-2">
    <%= form.submit('Save', class: 'btn btn-primary') %>
  </div>
