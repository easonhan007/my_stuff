<div class="my-2">
  <h3>
    <%= link_to "", new_stuff_path, data: {turbo_frame: 'modal'}, class: 'bi bi-plus-circle' %>
    Stuffs
  </h3>
</div>


<div class="row mb-2">
  <div class="col-md-8">
    <div class="row mb-2">
      <%= render partial: 'shared/search_form', locals: {q: @q}%>
    </div>
    <table class="table">
      <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Amount</th>
        <th>category</th>
        <th></th>
        <th></th>
      </thead>
      <tbody id="stuffs">
        <% @stuffs.each do |stuff| %>
          <%= render stuff %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <%= turbo_frame_tag 'modal' %>
  </div>
</div>

<div class="row">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>